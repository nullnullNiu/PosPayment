<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#E1CDCC">

<!--    <ImageView-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_gravity="right"-->
<!--        android:layout_marginRight="10dp"-->
<!--        android:background="@drawable/black_toast_triangle_top"/>-->

    <TextView
        android:id="@+id/tv_binding"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:drawableLeft="@mipmap/binding"
        android:drawablePadding="5dp"
        android:paddingStart="5dp"
        android:paddingRight="10dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text="设备绑定" />

    <TextView
        android:id="@+id/tv_chang_pwd"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_marginTop="0.5dp"

        android:drawableLeft="@mipmap/chang_pwd"
        android:drawablePadding="5dp"
        android:paddingStart="5dp"
        android:paddingRight="10dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:text="修改密码" />

    <TextView
        android:id="@+id/tv_seting"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_marginTop="0.5dp"

        android:drawableLeft="@mipmap/seting"
        android:drawablePadding="5dp"
        android:paddingStart="5dp"
        android:paddingRight="10dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:text="应用设置"/>
    <TextView
        android:id="@+id/tv_help"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_marginTop="0.5dp"
        android:drawableLeft="@mipmap/help"
        android:drawablePadding="5dp"
        android:paddingStart="5dp"
        android:paddingRight="10dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:text="使用帮助" />

    <TextView
        android:id="@+id/tv_service"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_marginTop="0.5dp"
        android:drawableLeft="@mipmap/service"
        android:drawablePadding="5dp"
        android:paddingStart="5dp"
        android:paddingRight="10dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:text="联系客服" />

</LinearLayout>