<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include
        layout="@layout/include_pickerview_topbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pickerview_topbar_height" />

    <LinearLayout
        android:id="@+id/optionspicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <com.contrarywind.view.WheelView
            android:id="@+id/options1"
            android:focusable="true"
            android:nextFocusUp="@id/options1"
            android:nextFocusDown="@id/options1"
            android:background="@drawable/gridview_item_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.contrarywind.view.WheelView
            android:id="@+id/options2"
            android:nextFocusUp="@id/options2"
            android:nextFocusDown="@id/options2"
            android:focusable="true"
            android:background="@drawable/gridview_item_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.contrarywind.view.WheelView
            android:id="@+id/options3"
            android:nextFocusUp="@id/options3"
            android:nextFocusDown="@id/options3"
            android:focusable="true"
            android:background="@drawable/gridview_item_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <com.contrarywind.view.WheelView
            android:id="@+id/options4"
            android:nextFocusUp="@id/options4"
            android:nextFocusDown="@id/options4"
            android:focusable="true"
            android:background="@drawable/gridview_item_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>


</LinearLayout>